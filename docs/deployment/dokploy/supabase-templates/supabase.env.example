# MudRock Supabase Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
SUPABASE_DOMAIN=supabase.yourdomain.com
SITE_URL=https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your-super-secret-and-long-postgres-password
POSTGRES_DB=postgres

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# Generate a secure JWT secret (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# =============================================================================
# DASHBOARD AUTHENTICATION
# =============================================================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-dashboard-password

# =============================================================================
# SMTP CONFIGURATION (for email authentication)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@yourdomain.com
SMTP_SENDER_NAME=MudRock

# =============================================================================
# OAUTH PROVIDERS (disabled - using Supabase Auth only)
# =============================================================================
# GitHub OAuth (disabled)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Google OAuth (disabled)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Storage backend: 'file' for local storage or 's3' for AWS S3
STORAGE_BACKEND=file
GLOBAL_S3_BUCKET=
REGION=us-east-1

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# API Keys (will be generated automatically if not provided)
ANON_KEY=
SERVICE_ROLE_KEY=

# Database connection pooler settings
POOLER_TENANT_ID=your-tenant-id
POOLER_PROXY_PORT=6543
POOLER_PROXY_PORT_TRANSACTION=6544

# Realtime settings
REALTIME_JWT_SECRET=${JWT_SECRET}
REALTIME_DB_ENC_KEY=supabaserealtime

# Storage settings
FILE_SIZE_LIMIT=52428800
STORAGE_FILE_SIZE_LIMIT=52428800

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Change all default passwords and secrets
# 2. Use strong, randomly generated values
# 3. Never commit this file to version control
# 4. Use environment variables in production
# 5. Consider using a secrets management service
