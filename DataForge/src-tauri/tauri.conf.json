{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "DataForge",
	"version": "0.1.0",
	"identifier": "com.dataforge.app",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "DataForge",
				"width": 1280,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"decorations": true,
				"visible": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/icon.png",
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png"
		]
	},
	"plugins": {
		"shell": {
			"open": true
		}
	}
}
